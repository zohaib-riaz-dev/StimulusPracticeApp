<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>

</br></br></br>

<div>
  <button data-controller="hello" data-action="click->hello#greet">Greet</button>
</div>

</br></br></br>

<div data-controller="clipboard">
  PIN: <input type="text" value="333444" data-clipboard-target="source" readonly>
  <button data-action="clipboard#copy">Copy to Clipboard</button>
</div>

</br></br></br></br></br>

<div data-controller="slideshow" data-slideshow-index-value="1">
  <button data-action="slideshow#previous"> ← </button>
  <button data-action="slideshow#next"> → </button>

  <div data-slideshow-target="slide">🐵</div>
  <div data-slideshow-target="slide">🙈</div>
  <div data-slideshow-target="slide">🙉</div>
  <div data-slideshow-target="slide">🙊</div>
</div>

</br></br></br></br></br>

<div data-controller="example" data-example-message-value="Hello, Stimulus!">
  <p data-example-target="output"></p>
  <input type="text" data-action="input->example#changeMessage">
</div>
